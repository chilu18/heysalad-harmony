{
  "manifest_version": 3,
  "name": "Bereit Sheets Agent",
  "description": "Reads selected Google Sheets rows, asks OpenAI GPT-5 for suggestions, and writes notes back into the sheet.",
  "version": "0.1.0",
  "action": {
    "default_title": "Bereit Sheets Agent",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://docs.google.com/spreadsheets/*",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/spreadsheets/*"
      ],
      "js": [
        "content/content-script.js"
      ],
      "css": [
        "content/content-styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "panel/sidebar.html",
        "panel/sidebar.js",
        "panel/sidebar.css",
        "assets/*"
      ],
      "matches": [
        "https://docs.google.com/*"
      ]
    }
  ]
}
